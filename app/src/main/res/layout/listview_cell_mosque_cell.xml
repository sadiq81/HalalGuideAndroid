<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="60dp">

    <ImageView
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:id="@+id/thumbnail"
        android:src="@drawable/mosque"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/location_cell_text_large"
        android:text="Safir Kebab"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/location_cell_text_small"
        android:text="Jagtvej 23"
        android:id="@+id/road"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_marginTop="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/location_cell_text_small"
        android:text="2200 KÃ¸benhavn N"
        android:id="@+id/postal_code"
        android:layout_below="@+id/road"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/location_cell_text_large"
        android:text="2,73"
        android:id="@+id/distance"
        android:layout_above="@+id/road"
        android:paddingTop="3dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/location_cell_text_small"
        android:text="km"
        android:id="@+id/km"
        android:layout_alignTop="@+id/road"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/language"
        android:src="@drawable/danish"
        android:layout_alignParentTop="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_toStartOf="@+id/distance"
        android:layout_toLeftOf="@+id/distance" />
    <TextView
        android:text="@string/danish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/language_label"
        android:layout_below="@+id/language"
        android:layout_marginTop="1dp"
        android:layout_toStartOf="@+id/distance"
        android:layout_toLeftOf="@+id/distance"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"/>

</RelativeLayout>